<UserControl
    x:Class="Edulink.Views.SelectComputerControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:classes="clr-namespace:Edulink.Classes"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:lex="http://wpflocalizeextension.codeplex.com"
    xmlns:local="clr-namespace:Edulink.Views"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:Edulink.ViewModels"
    d:Background="{StaticResource MaterialDesign.Brush.Background}"
    d:DataContext="{d:DesignInstance vm:SelectComputerControlViewModel,
                                     IsDesignTimeCreatable=True}"
    d:DesignHeight="550"
    d:DesignWidth="400"
    lex:LocalizeDictionary.DesignCulture="{x:Static classes:LocalizationConfig.DesignCulture}"
    lex:ResxLocalizationProvider.DefaultAssembly="{x:Static classes:LocalizationConfig.DefaultAssembly}"
    lex:ResxLocalizationProvider.DefaultDictionary="{x:Static classes:LocalizationConfig.DefaultDictionary}"
    mc:Ignorable="d">
    <UserControl.Resources>
        <materialDesign:BooleanToVisibilityConverter
            x:Key="BooleanToVisibilityConverter"
            FalseValue="Collapsed"
            TrueValue="Visible" />
        <materialDesign:BooleanToVisibilityConverter
            x:Key="InvertBooleanToVisibilityConverter"
            FalseValue="Visible"
            TrueValue="Collapsed" />
        <materialDesign:InvertBooleanConverter x:Key="InvertBooleanConverter" />
    </UserControl.Resources>
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <ListBox
                Grid.Row="0"
                Margin="0,0,0,10"
                d:ItemsSource="{d:SampleData ItemCount=16}"
                IsEnabled="{Binding SendTeacher, Converter={StaticResource InvertBooleanConverter}}"
                ItemsSource="{Binding ComputersView}"
                SelectedItem="{Binding SelectedComputer}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Cursor="Hand" Orientation="Horizontal">
                            <materialDesign:PackIcon
                                Width="20"
                                Height="20"
                                Margin="0,0,10,0"
                                VerticalAlignment="Center"
                                Kind="DesktopWindows" />
                            <StackPanel>
                                <TextBlock Style="{StaticResource MaterialDesignBody1TextBlock}" Text="{Binding Name}" />
                                <!--<TextBlock Style="{StaticResource MaterialDesignOverlineTextBlock}" Text="{Binding ID}" />-->
                            </StackPanel>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <CheckBox
                Grid.Row="1"
                Margin="10"
                HorizontalAlignment="Left"
                Content="{lex:Loc SelectComputer.SendToTeacher}"
                Cursor="Hand"
                IsChecked="{Binding SendTeacher}"
                Visibility="{Binding CanSendTeacher, Converter={StaticResource BooleanToVisibilityConverter}}" />
            <Button
                Grid.Row="1"
                Margin="10"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Command="{Binding NextCommand}"
                Content="{lex:Loc SelectComputer.Next,
                                  Converter={lex:ToUpperConverter}}"
                Style="{StaticResource MaterialDesignFlatButton}" />
        </Grid>
    </Grid>
</UserControl>
