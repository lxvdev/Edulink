<Window x:Class="Edulink.MessageBoxDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Edulink"
        mc:Ignorable="d"
        FontFamily="{StaticResource Inter}"
        Title="{DynamicResource MessageTitleBar}"
        MinHeight="120"
        MinWidth="400"
        MaxWidth="500"
        WindowStartupLocation="CenterScreen"
        Topmost="True"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight">
    <Grid Margin="10">
        <TextBlock x:Name="MessageContent" TextWrapping="Wrap" FontSize="16" VerticalAlignment="Top" Margin="0,0,0,35"/>
        <StackPanel VerticalAlignment="Bottom" HorizontalAlignment="Right" Orientation="Horizontal">
            <Button Content="{DynamicResource OkButton}" FontSize="14" Height="25" MinWidth="80" Padding="10,0" Margin="0,0,5,0" Click="OkButton_Click"/>
            <Button Content="{DynamicResource RespondButton}" FontSize="14" Height="25" MinWidth="80" Padding="10,0" Margin="0,0,0,0" Click="RespondButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
