<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    <StackPanel x:Key="ClientTooltip">
        <!--  Name  -->
        <StackPanel Margin="0,0,0,2" Orientation="Horizontal">
            <materialDesign:PackIcon
                Margin="0,0,5,0"
                VerticalAlignment="Center"
                Kind="User" />
            <TextBlock VerticalAlignment="Center">
                <Run Text="{DynamicResource Main.List.ToolTip.Name}" />
                <Run Text="{Binding Name}" />
            </TextBlock>
        </StackPanel>

        <!--  Version  -->
        <StackPanel Margin="0,0,0,2" Orientation="Horizontal">
            <materialDesign:PackIcon
                Margin="0,0,5,0"
                VerticalAlignment="Center"
                Kind="Update" />
            <TextBlock VerticalAlignment="Center">
                <Run Text="{DynamicResource Main.List.ToolTip.Version}" />
                <Run Text="{Binding Version, StringFormat='v{0}'}" />
            </TextBlock>
        </StackPanel>

        <!--  Connection Time  -->
        <StackPanel Margin="0,0,0,2" Orientation="Horizontal">
            <materialDesign:PackIcon
                Margin="0,0,5,0"
                VerticalAlignment="Center"
                Kind="Lan" />
            <TextBlock VerticalAlignment="Center">
                <Run Text="{DynamicResource Main.List.ToolTip.ConnectionTime}" />
                <Run Text="{Binding ConnectionTime, StringFormat='{}{0:HH:mm:ss}'}" />
            </TextBlock>
        </StackPanel>

        <!--  Endpoint  -->
        <StackPanel Margin="0,0,0,2" Orientation="Horizontal">
            <materialDesign:PackIcon
                Margin="0,0,5,0"
                VerticalAlignment="Center"
                Kind="Link" />
            <TextBlock VerticalAlignment="Center">
                <Run Text="{DynamicResource Main.List.ToolTip.Endpoint}" />
                <Run Text="{Binding Endpoint, Mode=OneWay}" />
            </TextBlock>
        </StackPanel>
    </StackPanel>
</ResourceDictionary>