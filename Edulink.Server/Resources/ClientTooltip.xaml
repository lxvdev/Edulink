<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    <StackPanel x:Key="ClientTooltip">
        <!--  Name  -->
        <StackPanel Margin="0,0,0,2" Orientation="Horizontal">
            <materialDesign:PackIcon
                Margin="0,0,5,0"
                VerticalAlignment="Center"
                Kind="User" />
            <TextBlock VerticalAlignment="Center" Text="{Binding Name, StringFormat={StaticResource Main.List.ToolTip.Name}}" />
        </StackPanel>

        <!--  Version  -->
        <StackPanel Margin="0,0,0,2" Orientation="Horizontal">
            <materialDesign:PackIcon
                Margin="0,0,5,0"
                VerticalAlignment="Center"
                Kind="Update" />
            <TextBlock VerticalAlignment="Center" Text="{Binding Version, StringFormat={StaticResource Main.List.ToolTip.Version}}" />
        </StackPanel>

        <!--  Connection Time  -->
        <StackPanel Margin="0,0,0,2" Orientation="Horizontal">
            <materialDesign:PackIcon
                Margin="0,0,5,0"
                VerticalAlignment="Center"
                Kind="Lan" />
            <TextBlock VerticalAlignment="Center" Text="{Binding ConnectionTime, StringFormat={StaticResource Main.List.ToolTip.ConnectionTime}}" />
        </StackPanel>

        <!--  Endpoint  -->
        <StackPanel Margin="0,0,0,2" Orientation="Horizontal">
            <materialDesign:PackIcon
                Margin="0,0,5,0"
                VerticalAlignment="Center"
                Kind="Link" />
            <TextBlock VerticalAlignment="Center" Text="{Binding Endpoint, StringFormat={StaticResource Main.List.ToolTip.Endpoint}}" />
        </StackPanel>
    </StackPanel>
</ResourceDictionary>